<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="30dp"
  android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Reset Password"
    android:textSize="20sp"
    android:layout_marginBottom="@dimen/medium_margin"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/medium_margin"
      android:text="Password" />
    <EditText
      android:id="@+id/activity_verification_edt_pwd"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/small_margin"
      android:background="#fbfefd"
      android:inputType="textPassword" />

  <TextView
    android:id="@+id/activity_verification_txt_pwd_err"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/colorDanger"
    android:text="" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/medium_margin"
    android:text="Confirmation" />
  <EditText
    android:id="@+id/activity_verification_edt_confirm_pwd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/small_margin"
    android:background="#fbfefd"
    android:inputType="textPassword" />
  <TextView
    android:id="@+id/activity_verification_txt_confirm_pw_err"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/colorDanger"
    android:text="" />

  <Button
    android:id="@+id/activity_verification_btn_verify"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/medium_margin"
    android:background="@color/colorPrimary"
    android:text="Change password"
    android:textColor="@color/colorWhite" />
</LinearLayout>